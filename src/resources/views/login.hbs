<div class="login">
   <img class="login-background" src="/img/login_background.jpg" alt="">

   <form method="post" action="/login" class="login-form">
      <div class="login-form__header">
         <div class="login-form__seperate"></div>
         <p class="login-form__title">Đăng nhập</p>
      </div>
      
      <div class="login-form__avatar">
         <img class="login-form__avatar-icon" src="svg/user.svg" alt="">
      </div>
      
      <label for="username"></label>
      <input type="text" id="logUsername" name="username" placeholder="Tên đăng nhập" autocomplete="off">
      <label for="password"></label>
      <input type="password" id="logPassword" name="password" placeholder="Mật khẩu">
      <button class="btn login-btn" type="submit">LOGIN</button>
   </form>
</div>